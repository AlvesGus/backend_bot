
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Transaction {
  id          String   @id @default(uuid())
  title       String
  amount      Float
  type        String
  category    category
  telegram_id String  
  name_user    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


enum category {
  Entrada
  Saida
  Investimento
}